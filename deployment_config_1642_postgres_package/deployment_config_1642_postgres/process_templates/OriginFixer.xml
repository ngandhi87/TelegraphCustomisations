<media-mogul-configuration>
	<config groupname="LifecycleTransfer">
		<properties>
			<CLASS hidden="true">Lifecycle Management</CLASS>
			<TYPE hidden="true">Fixer</TYPE>
			<NAME description="Process name">Origin fixer</NAME>
			<APP_GROUP description="Aplication group">CHP 1</APP_GROUP>
			<AVOIDS_ABORTION hidden="true">y</AVOIDS_ABORTION>
			<NORMALLY_RUNNING hidden="true">n</NORMALLY_RUNNING>

			<schedule-type>manual</schedule-type>
			<schedule-interval-count>1</schedule-interval-count>
			<schedule-interval-type>minute</schedule-interval-type>
		</properties>
		<modules>
			<!-- Set the origin equal to the lifecycle status where there is no origin and the lifecycle status if either 'Created' or 'Feed' -->
			<module ref="FixOrigins">
				<class>com.picdar.process.Repository.JDBCStatement.JDBCStatement</class>
				<config>
					<datasource>default</datasource>
					<statement>UPDATE ASSET SET ORIGIN = LIFECYCLE_STATUS WHERE (ORIGIN IS NULL OR ORIGIN = '') AND (LIFECYCLE_STATUS = 'Created' OR LIFECYCLE_STATUS = 'Feed')</statement>
				</config>
			</module>
		</modules>
		<schedule>
			<scheduletype>manual</scheduletype>
			<runinterval>
				<count>15</count>
				<intervalsize>second</intervalsize>
			</runinterval>
			<timedschedule>
				<months>1-12</months>
				<dates>1,6,10</dates>
				<weekdays>1-5</weekdays>
				<hours>0,4,8,12,16,20</hours>
				<minutes>0,15,30,45</minutes>
			</timedschedule>
		</schedule>
	</config>
</media-mogul-configuration>
